import telebot
import requests
import time
from keep_alive import keep_alive

TOKEN = 'आपका_BotFather_Token_यहाँ_डालें'
bot = telebot.TeleBot(TOKEN)

def get_binomo_data():
    # Dummy example data; replace with real API logic if available
    import random
    return {
        "price": round(random.uniform(100, 200), 2),
        "rsi": random.randint(10, 90),
        "ma": random.randint(100, 200)
    }

@bot.message_handler(commands=['start'])
def welcome(message):
    bot.reply_to(message, "📊 Welcome to Binomo Signal Bot!\nSend /signal to get latest market signal.")

@bot.message_handler(commands=['signal'])
def send_signal(message):
    data = get_binomo_data()
    signal = ""
    if data["rsi"] < 30:
        signal = "🟢 Buy Signal"
    elif data["rsi"] > 70:
        signal = "🔴 Sell Signal"
    else:
        signal = "⚪ No clear signal"

    reply = (
        f"📈 *Binomo Signal*\n"
        f"Price: {data['price']}\n"
        f"RSI: {data['rsi']}\n"
        f"MA: {data['ma']}\n"
        f"Signal: {signal}"
    )
    bot.send_message(message.chat.id, reply, parse_mode='Markdown')

keep_alive()
print("🤖 Bot is running...")
bot.polling()


